>>> Switch Statements

let choice = 1;
switch(choice){
  case 1:                                           // --> Matches case 1
    console.log("Sports");
    break;
  case 2:
    console.log("Business");
    break;
  case 3:
    console.log("Technology");
    break;
  default:                                          // --> The default value that is returned if nothing else is found
    console.log("Not Found")
}

